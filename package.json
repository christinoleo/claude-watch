{
  "name": "claude-mux",
  "version": "0.7.1",
  "description": "Real-time web dashboard for monitoring and controlling multiple Claude Code sessions",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "claude-mux": "dist/cli.js"
  },
  "workspaces": [
    "web"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christinoleo/claude-mux.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run build:cli && bun run build:web",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:web": "cd web && bun run build",
    "dev": "tsc -p tsconfig.cli.json --watch",
    "dev:serve": "while true; do (cd web && bun run dev --host 0.0.0.0 --port 3456); echo 'Dev server crashed, restarting in 2s...'; sleep 2; done",
    "start": "bun dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "prepublishOnly": "bun run build",
    "preuninstall": "claude-mux --cleanup || true",
    "version": "bun -e \"const v=require('./package.json').version; require('fs').writeFileSync('src/utils/version.ts', '/**\\n * Central version constant for claude-watch.\\n * Keep in sync with package.json version.\\n */\\nexport const VERSION = \\\"'+v+'\\\";\\n')\" && git add src/utils/version.ts"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "web",
    "dashboard",
    "monitoring",
    "websocket",
    "sveltekit",
    "tmux",
    "real-time"
  ],
  "author": "Leonardo Christino",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ink": "^5.1.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^8.57.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
